h1 {{post.postId ? 'Edit Post' : 'New Post'}}
div(layout)
  md-card(flex="50")
    md-card-content
      div(layout)
        md-input-container(flex)
          label Title
          input(ng-model="post.title" ng-blur="generateSlug()")
      div(layout)
        md-input-container(flex)
          label Slug
          input(ng-model="post.slug")
    div.text-center
      md-button.md-raised(ng-click="updatePost()") Submit